<div class="container">
  <div class="row">
    
    <div class="col-8 offset-2">
    <a href="/admin/word/create" class="btn btn-primary btn-sm mt-5">Add user</a>
      <table class="table mt-3">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Word</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let index in data) {%>
            <tr>
            <th scope="row"><%= +index + 1%></th>
            <td><%= data[index]['title'] %> </td>
            <td><%= data[index]['description'] %></td>
            <td>
              <a href="/admin/word/add/<%= data[index]['id'] %>" class="btn btn-outline-warning btn-sm">Add</a>
              <a href="/admin/word/delete/<%= data[index]['id'] %>" class="btn btn-outline-danger btn-sm">delete</a>
            </td>
          </tr>
            <% } %>  
          
        </tbody>
      </table>
    </div>
  </div>
</div>
